<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Customer Information</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>

<body>
    <div class="container">
        <div class="row">

            <form action="/put-crud" method="POST" enctype="multipart/form-data">
                <!-- Input ẩn để gửi ID khách hàng -->
                <input type="hidden" name="id" value="<%= customer.id %>">
                <div class="col-12">Edit Customer Information</div>
                <!-- <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputEmail4">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Email">
                    </div>
                    <div class="form-group col-6">
                        <label for="inputPassword4">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                </div> -->
                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputEmail4">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Name"
                            value="<%= customer.name %>">

                    </div>
                </div>

                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" name="address" placeholder="1234 Main St"
                        value="<%= customer.address %>">
                </div>
                <div class="form-group ">
                    <label for="inputCity">Phone number</label>
                    <input type="text" name="phone" class="form-control" value="<%= customer.phone %>">
                </div>

                <div class="mb-3">
                    <label for="formFile" class="form-label">Current Image</label>
                    <% if (customer.imageUrl) { %>
                        <img src="/uploads/<%= customer.imageUrl %>" alt="Customer Image"
                            style="max-width: 150px; max-height: 150px; margin-bottom: 10px;">

                        <% } %>
                </div>

                <!-- Upload ảnh mới -->
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload New Image</label>
                    <input class="form-control" type="file" name="imageUrl">
                </div>


                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</body>

</html>